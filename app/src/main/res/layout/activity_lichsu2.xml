<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/box"
            android:gravity="center"
            android:text="Thời gian thay đổi"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txtLSTG"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/box"
            android:gravity="center"
            android:text="2023-05-14"
            android:textColor="@color/black"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="213dp"
            android:layout_height="match_parent"
            android:background="@drawable/box"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="Độ ẩm cài  đặt"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="198dp"
            android:background="@drawable/box"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="15dp"
            android:text="10%"
            android:id="@+id/txtLSDACD"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="213dp"
            android:layout_height="match_parent"
            android:background="@drawable/box"
            android:gravity="center"
            android:text="Trạng thái máy bơm"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/imageViewMayBom"
            android:layout_width="199dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/maybomoff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="213dp"
            android:layout_height="match_parent"
            android:background="@drawable/box"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="Tốc độ"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="198dp"
            android:background="@drawable/box"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="15dp"
            android:text="09"
            android:id="@+id/txtLSTD"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="213dp"
            android:layout_height="match_parent"
            android:background="@drawable/box"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="Độ ẩm cảm biến"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="198dp"
            android:background="@drawable/box"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="15dp"
            android:text="11%"
            android:id="@+id/txtLSDA"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="213dp"
            android:layout_height="match_parent"
            android:background="@drawable/box"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="Trạng thái hoạt động"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="198dp"
            android:background="@drawable/box"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="15dp"
            android:text="Thủ Công"
            android:id="@+id/txtLSTTHD"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="213dp"
            android:layout_height="match_parent"
            android:background="@drawable/box"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="Lượng nước"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="198dp"
            android:background="@drawable/box"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="15dp"
            android:text="Còn nước"
            android:id="@+id/txtLSLN"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>